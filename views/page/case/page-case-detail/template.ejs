<!DOCTYPE html>
<html class="no-js" lang="zh">
<head>
  <meta charset="utf-8">
  <%- include('../../../layout/commonHead')%>
  <!--css-->
  <link rel="stylesheet" href="/css/case/page-case-detail/style.css">
  <link rel="stylesheet" href="/css/variables.css">
  <link rel="stylesheet" href="/css/component.css">
  <link rel="stylesheet" href="/css/common.css">
  <link rel="stylesheet" href="/css/article.css">
  <link rel="stylesheet" href="/css/layout.css">
  <link rel="stylesheet" href="/css/global.css">
  <link rel="stylesheet" href="/common/plugins/css/swiper.css">
  <link rel="stylesheet" href="/common/plugins/video-js/video-js.css">

  <!--js-->
  <script src="/common/plugins/jquery.min.js"></script>
  <script src="/common/plugins/swiper.js"></script>
</head>
<body>
<div class="main-layout">
  <%- include('../../../layout/header');%>
  <% if(hasBanner) { %>
    <%- include('../../../component/banner');%>
  <% } %>
  <% if(tabsData.length) { %>
    <%- include('../../../component/tabs');%>
  <% } %>
  <section class="main-wrap">
    <div class="main-content">
      <section>
        <div class="case-detail-wrap">
          <div class="case-detail-content">
            <div class="fake-header"></div>

            <div class="module-article-crumbs mar-t20">
              <span style="margin-right: 10px;"><a href="/case">客户案例</a></span>>
              <span style="margin-left: 5px;"><%=detailData.title%></span>
            </div>

            <div class="module-article-main-view">
              <div class="info-view fn-left">
                <img class="main-icon fn-left" src="<%=detailData.icon%>" alt="案例" />
                <div class="main-title"><%=detailData.title%></div>
                <div class="desc-bar mar-t20"></div>
                <div class="main-desc"><%=detailData.desc%></div>
                <div class="desc-bar"></div>

                <div class="slice-line mar-t40 mar-b20"></div>

                <% detailData.content.forEach(function(item){ %>
                  <div class="info-item">
                    <% if(item.key === 'img') { %>
                    <div class="img-item mar-t10 mar-b10">
                      <img src="<%=item.data%>" alt="<%=detailData.title%>" />
                    </div>

                    <!--可以多定义一些自定义样式-->
                    <% } else if(item.key === 'title-normal'){ %>
                    <span class="title-normal-item mar-t10"><%=item.data%></span>
                    <% } else if(item.key === 'text'){ %>
                    <div class="text-item mar-t20 mar-b20">
                      <%=item.data%>
                    </div>
                    <% } %>
                  </div>
                <% }); %>
              </div>

              <% recommendData.content.forEach(function(rec, index){ %>
                <div class="fn-right side-view box-shadow-1 pad20 <% if(index > 0){ %>mar-t40<% } %>">
                  <div class="title mar-b10"><%=rec.title%></div>
                  <% rec.data.forEach(function(item){ %>
                  <a class="product-item mar-t10 mar-b10" href="<%=item.href%>">
                    <% if(item.icon) { %>
                    <img class="icon-img fn-left" src="<%=item.icon%>" alt="<%=item.alt%>" />
                    <% } %>
                    <div class="title <% if(item.icon){ %>mar-l48<% } %>"><%=item.name%></div>
                    <img class="arrow-img" src="/images/common/xiangyou-white.svg" />
                  </a>
                  <% }); %>
                </div>
              <% }); %>
            </div>

          </div>
        </div>
        <%- include('../../../component/form');%>
      </section>
    </div>
  </section>

  <%- include('../../../layout/footer');%>
  <%- include('../../../component/sideMenus');%>

</div>
<script src="/js/common.js"></script>
<%- include('../../../layout/commonFoot');%>
</body>
</html>

